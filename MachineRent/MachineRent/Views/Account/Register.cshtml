@model RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}


<div class="signup-form">
    <form asp-action="Register" asp-controller="Account" method="post" class="shadow p-3">

        <h2>Rejestracja</h2>
        @Html.ValidationSummary()

        <div class="form-group">
            <input type="text" class="form-control" asp-for="Login" placeholder="Login" required="required"/>
            <span asp-validation-for="Login"></span>
        </div>

        <div class="form-group">
            <input type="email" class="form-control" asp-for="Email" placeholder="Adres Email" required="required" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <input type="password" class="form-control" asp-for="Password" placeholder="Hasło" required="required" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Potwierdź hasło" required="required" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">Zarejestruj się</button>
        </div>

    </form>
    <div class="text-center">Posiadasz już konto? <a asp-action="Login" asp-controller="Account" style="color: royalblue">Zaloguj się!</a></div>
</div>
