@*@model IList<MachineRent.Models.Machines>*@
@model IList<Machines>

@{
    ViewBag.Title = "Lista maszyn";
    Layout = "_Layout";
}


<div class="desc-div">
    <a class="btn btn-primary btn-lg" asp-action="Add" asp-controller="Machine">Dodaj maszynę</a>
    <table class="table table-hover table-sm">
        <thead class="thead-light">
            <tr>
                <th>Marka</th>
                <th>Model</th>
                <th>BHP</th>
                <th>Dzienny koszt</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var machine in @Model)
            {
                <tr>
                    <td>@machine.Brand</td>
                    <td>@machine.Model</td>
                    <td>@machine.HorsePower</td>
                    <td>@machine.CostPerDay</td>
                    <td>
                        <a asp-action="FormReservation" asp-controller="Machine" asp-route-id="@machine.MachineId">Zarezerwuj</a>
                        <a asp-action="SpecificDetail" asp-controller="Machine" asp-route-id="@machine.MachineId">Szczegóły</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>